<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản Trị Hệ Thống</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- Admin Custom CSS -->
    <link href="~/css/admin-layout.css" rel="stylesheet">
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="brand">
            <i class="bi bi-shield-check"></i> Admin Panel
        </div>

        <nav class="nav flex-column">
            <a class="nav-link active" href="/Admin/Dashboard">
                <i class="bi bi-speedometer2"></i>
                <span>Dashboard</span>
            </a>

            <a class="nav-link" href="/Admin/Users">
                <i class="bi bi-people"></i>
                <span>Quản Lý Người Dùng</span>
            </a>

            <a class="nav-link" href="/Admin/Products">
                <i class="bi bi-box-seam"></i>
                <span>Quản Lý Sản Phẩm</span>
            </a>

            <a class="nav-link" href="/Admin/Categories">
                <i class="bi bi-grid"></i>
                <span>Quản Lý Danh Mục</span>
            </a>

            <a class="nav-link" href="/Admin/Orders">
                <i class="bi bi-cart-check"></i>
                <span>Quản Lý Đơn Hàng</span>
            </a>

            <a class="nav-link" href="/Admin/Payments">
                <i class="bi bi-credit-card"></i>
                <span>Quản Lý Thanh Toán</span>
            </a>

            <a class="nav-link" href="/Admin/Reports">
                <i class="bi bi-bar-chart"></i>
                <span>Báo Cáo & Thống Kê</span>
            </a>

            <a class="nav-link" href="/Admin/Settings">
                <i class="bi bi-gear"></i>
                <span>Cài Đặt Hệ Thống</span>
            </a>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Top Navbar -->
        <div class="top-navbar">
            <div>
                <button class="btn btn-link d-md-none" id="sidebarToggle">
                    <i class="bi bi-list fs-4"></i>
                </button>
                <h5 class="mb-0 d-none d-md-inline">@ViewData["Title"]</h5>
            </div>

            <div class="user-menu">
                <div class="dropdown">
                    <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <div class="user-avatar">A</div>
                        <span class="ms-2">Admin</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/Admin/Profile"><i class="bi bi-person"></i> Thông Tin Cá Nhân</a></li>
                        <li><a class="dropdown-item" href="/Admin/ChangePassword"><i class="bi bi-key"></i> Đổi Mật Khẩu</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-action="Logout" asp-controller="Account" method="post">
                                <button type="submit" class="dropdown-item text-danger">
                                    <i class="bi bi-box-arrow-right"></i> Đăng Xuất
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Content Area -->
        <div class="content-area">
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer class="text-center py-3 bg-white border-top">
            <p class="mb-0 text-muted">© 2025 Admin Panel. All rights reserved.</p>
        </footer>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Toggle sidebar on mobile
        document.getElementById('sidebarToggle')?.addEventListener('click', function () {
            document.querySelector('.sidebar').classList.toggle('show');
        });

        // Active link highlighting
        const currentPath = window.location.pathname;
        document.querySelectorAll('.sidebar .nav-link').forEach(link => {
            if (link.getAttribute('href') === currentPath) {
                document.querySelectorAll('.sidebar .nav-link').forEach(l => l.classList.remove('active'));
                link.classList.add('active');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>