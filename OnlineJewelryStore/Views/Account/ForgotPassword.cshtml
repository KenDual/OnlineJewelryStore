@{
   Layout = null;
}

<!DOCTYPE html>
<html>
<head>
   <meta charset="utf-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Forgot Password - Online Jewelry Store</title>
   <link rel="preconnect" href="https://fonts.googleapis.com">
   <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
   <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;600&display=swap" rel="stylesheet">
   <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

   <style>
      * {
         margin: 0;
         padding: 0;
         box-sizing: border-box;
         font-family: 'Source Sans Pro', sans-serif;
      }

      body {
         height: 100vh;
         width: 100%;
         background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
         display: flex;
         align-items: center;
         justify-content: center;
         position: relative;
         overflow: hidden;
         background-image: url('/images/bg.jpg');
      }

         /* Animated background */
         body::before {
            content: '';
            position: absolute;
            width: 200%;
            height: 200%;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="%23ffffff" fill-opacity="0.1" d="M0,192L48,197.3C96,203,192,213,288,229.3C384,245,480,267,576,250.7C672,235,768,181,864,181.3C960,181,1056,235,1152,234.7C1248,235,1344,181,1392,154.7L1440,128L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>') no-repeat;
            animation: wave 10s linear infinite;
            opacity: 0.3;
         }

      @@keyframes wave {
         0% {
            transform: translateX(0);
         }

         100% {
            transform: translateX(-50%);
         }
      }

      .form-container {
         width: 400px;
         padding: 40px;
         background: rgba(255, 255, 255, 0.95);
         border-radius: 20px;
         box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
         backdrop-filter: blur(10px);
         z-index: 1;
         animation: slideIn 0.5s ease-out;
      }

      @@keyframes slideIn {
         from {
            opacity: 0;
            transform: translateY(-20px);
         }

         to {
            opacity: 1;
            transform: translateY(0);
         }
      }

      .form-header {
         text-align: center;
         margin-bottom: 30px;
      }

      .icon-wrapper {
         width: 80px;
         height: 80px;
         margin: 0 auto 20px;
         background: #1D1E2C;
         border-radius: 50%;
         display: flex;
         align-items: center;
         justify-content: center;
         box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
      }

         .icon-wrapper i {
            font-size: 36px;
            color: white;
         }

      .form-container h1 {
         color: #2c3e50;
         font-size: 28px;
         font-weight: 600;
         margin-bottom: 10px;
      }

      .form-container p {
         color: #7f8c8d;
         font-size: 14px;
         line-height: 1.6;
         margin-bottom: 25px;
      }

      .alert {
         padding: 12px 15px;
         margin-bottom: 20px;
         border-radius: 8px;
         font-size: 14px;
         display: flex;
         align-items: center;
      }

         .alert i {
            margin-right: 8px;
            font-size: 16px;
         }

      .alert-danger {
         background-color: #fee;
         color: #c0392b;
         border: 1px solid #ffdddd;
      }

      .alert-success {
         background-color: #d4edda;
         color: #155724;
         border: 1px solid #c3e6cb;
      }

      .input-box {
         position: relative;
         margin-bottom: 25px;
      }

         .input-box label {
            display: block;
            font-size: 14px;
            color: #2c3e50;
            margin-bottom: 8px;
            font-weight: 600;
         }

            .input-box label i {
               margin-right: 5px;
               color: #3498db;
            }

      .input-wrapper {
         position: relative;
      }

      .input-box input {
         width: 100%;
         padding: 12px 15px 12px 40px;
         font-size: 15px;
         color: #2c3e50;
         border: 2px solid #e0e0e0;
         border-radius: 10px;
         background: white;
         outline: none;
         transition: all 0.3s ease;
      }

         .input-box input:focus {
            border-color: #3498db;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
         }

      .input-icon {
         position: absolute;
         left: 12px;
         top: 50%;
         transform: translateY(-50%);
         color: #999;
         font-size: 18px;
         transition: color 0.3s;
      }

      .input-box input:focus ~ .input-icon {
         color: #3498db;
      }

      .btn {
         width: 100%;
         background: #3498db;
         color: white;
         font-size: 16px;
         font-weight: 600;
         padding: 14px 20px;
         border: none;
         border-radius: 10px;
         cursor: pointer;
         transition: all 0.3s ease;
         margin-top: 10px;
         box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
      }

         .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
         }

         .btn:active {
            transform: translateY(0);
         }

         .btn i {
            margin-right: 8px;
         }

      .footer-text {
         text-align: center;
         margin-top: 25px;
         padding-top: 20px;
         border-top: 1px solid #e0e0e0;
      }

         .footer-text p {
            color: #7f8c8d;
            font-size: 14px;
            margin: 0;
         }

         .footer-text a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s;
         }

            .footer-text a:hover {
               color: #764ba2;
            }

      .info-box {
         background: #f8f9fa;
         border-left: 4px solid black;
         padding: 12px 15px;
         border-radius: 5px;
         margin-bottom: 20px;
      }

         .info-box p {
            color: #495057;
            font-size: 13px;
            margin: 0;
            line-height: 1.5;
         }

         .info-box i {
            color: black;
            margin-right: 8px;
         }
   </style>
</head>

<body>
   <div class="form-container">
      <div class="form-header">
         <div class="icon-wrapper">
            <i class="fa fa-key"></i>
         </div>
         <h1>Forgot Password?</h1>
         <p>Don't worry! Enter your email address and we'll help you reset your password.</p>
      </div>

      @if (TempData["SuccessMessage"] != null)
      {
         <div class="alert alert-success">
            <i class="fa fa-check-circle"></i> @TempData["SuccessMessage"]
         </div>
      }

      @if (ViewBag.Error != null)
      {
         <div class="alert alert-danger">
            <i class="fa fa-exclamation-circle"></i> @ViewBag.Error
         </div>
      }

      <div class="info-box">
         <p><i class="fa fa-info-circle"></i>Enter the email address associated with your account and we'll send you a verification code.</p>
      </div>

      @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { autocomplete = "off" }))
      {
         @Html.AntiForgeryToken()

         <div class="input-box">
            <label for="email"><i class="fa fa-envelope"></i> Email Address</label>
            <div class="input-wrapper">
               <input type="email"
                      id="email"
                      name="email"
                      placeholder="Enter your registered email"
                      required />
               <i class="fa fa-envelope input-icon"></i>
            </div>
         </div>

         <button class="btn" type="submit">
            <i class="fa fa-paper-plane"></i> Send Reset Code
         </button>
      }

      <div class="footer-text">
         <p>Remember your password? @Html.ActionLink("Back to Login", "Login", null, new { @style = "margin-left: 5px;" })</p>
      </div>
   </div>
</body>
</html>