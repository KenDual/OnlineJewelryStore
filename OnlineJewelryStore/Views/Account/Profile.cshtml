@model OnlineJewelryStore.Models.User

@{
    ViewBag.Title = "Thông Tin Cá Nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 80px; margin-bottom: 80px;">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h2 class="mb-4">Thông Tin Cá Nhân</h2>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            @TempData["SuccessMessage"]
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                        </div>
                    }

                    @using (Html.BeginForm("Profile", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.UserID)

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Họ</label>
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Tên</label>
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Email</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = "readonly" })
                            <small class="form-text text-muted">Email không thể thay đổi</small>
                        </div>

                        <div class="form-group">
                            <label>Số điện thoại</label>
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label>Vai trò</label>
                            <input type="text" class="form-control" value="@Model.Role" readonly />
                        </div>

                        <div class="form-group">
                            <label>Ngày đăng ký</label>
                            <input type="text" class="form-control" value="@Model.RegistrationDate.ToString("dd/MM/yyyy HH:mm")" readonly />
                        </div>

                        <button type="submit" class="btn btn-primary">Cập Nhật</button>
                        @Html.ActionLink("Đổi Mật Khẩu", "ChangePassword", null, new { @class = "btn btn-warning ml-2" })
                    }
                </div>
            </div>
        </div>
    </div>
</div>