@model IEnumerable<OnlineJewelryStore.Models.ProductVariant>

@{
    ViewBag.Title = "Product Variants";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var product = ViewBag.Product as OnlineJewelryStore.Models.Product;
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">@Html.ActionLink("Products", "Index", "Products")</li>
            <li class="breadcrumb-item">@Html.ActionLink(product.ProductName, "Details", "Products", new { id = product.ProductID }, null)</li>
            <li class="breadcrumb-item active">Variants</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="bi bi-box-seam"></i> Variants for "@product.ProductName"
                    </h2>
                    <p class="text-muted">Manage SKU, metal types, sizes, and stock</p>
                </div>
                <div>
                    @Html.ActionLink("Add New Variant", "Create", new { productId = product.ProductID }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Back to Product", "Details", "Products", new { id = product.ProductID }, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    </div>

    <!-- Variants Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-list-ul"></i> All Variants
                        @if (Model != null && Model.Any())
                        {
                            <span class="badge bg-primary ms-2">@Model.Count() variants</span>
                        }
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-4">SKU</th>
                                    <th>Metal Type</th>
                                    <th>Purity</th>
                                    <th>Ring Size</th>
                                    <th>Chain Length</th>
                                    <th class="text-end">Additional Price</th>
                                    <th class="text-center">Stock</th>
                                    <th class="text-center">Created</th>
                                    <th style="width: 10%;" class="text-center">Gemstones</th>
                                    <th style="width: 10%;" class="text-center">Certifications</th>
                                    <th class="text-center" style="width: 200px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <span class="badge bg-primary">@item.SKU</span>
                                        </td>
                                        <td>@(item.MetalType ?? "N/A")</td>
                                        <td>@(item.Purity ?? "N/A")</td>
                                        <td>@(item.RingSize ?? "N/A")</td>
                                        <td>@(item.ChainLength ?? "N/A")</td>
                                        <td class="text-end">
                                            @{
                                                decimal add = item.AdditionalPrice; // không dùng .Value
                                            }
                                            @if (add > 0m)
                                            {
                                                <span class="text-success fw-bold">+@add.ToString("N0") ₫</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">0 ₫</span>
                                            }
                                        </td>

                                        <td class="text-center">
                                            @{
                                                var stockClass = item.StockQuantity == 0 ? "bg-danger" :
                                                               item.StockQuantity < 10 ? "bg-warning text-dark" : "bg-success";
                                            }
                                            <span class="badge @stockClass">@item.StockQuantity</span>
                                        </td>
                                        <td class="text-center text-muted small">
                                            @item.CreatedAt.ToString("dd/MM/yyyy")
                                        </td>

                                        <!-- Gemstones Column -->
                                        <td class="text-center">
                                            <a href="@Url.Action("Index", "Gemstones", new { variantId = item.VariantID })"
                                               class="btn btn-sm btn-info"
                                               title="Manage Gemstones">
                                                <i class="bi bi-gem"></i>
                                                @{
                                                    var gemstoneCount = item.Gemstones?.Count() ?? 0;
                                                }
                                                <span class="badge bg-light text-dark">@gemstoneCount</span>
                                            </a>
                                        </td>

                                        <!-- Certification Column -->
                                        <td class="text-center">
                                            <a href="@Url.Action("Index", "Certifications", new { variantId = item.VariantID })"
                                               class="btn btn-sm btn-warning"
                                               title="Manage Certifications">
                                                <i class="bi bi-award"></i>
                                                @{
                                                    var certCount = item.Certifications?.Count() ?? 0;
                                                }
                                                <span class="badge bg-light text-dark">@certCount</span>
                                            </a>
                                        </td>

                                        <!-- Actions Column -->
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("Edit", new { id = item.VariantID })"
                                                   class="btn btn-sm btn-warning"
                                                   title="Edit Variant">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a href="@Url.Action("Delete", new { id = item.VariantID })"
                                                   class="btn btn-sm btn-danger"
                                                   title="Delete Variant">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                @if (Model != null && Model.Any())
                {
                    <div class="card-footer bg-light">
                        <small class="text-muted">
                            <i class="bi bi-info-circle"></i>
                            Total Stock: <strong>@Model.Sum(v => v.StockQuantity)</strong> units
                        </small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>