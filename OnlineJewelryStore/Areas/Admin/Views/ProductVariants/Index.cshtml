@model IEnumerable<OnlineJewelryStore.Models.ProductVariant>

@{
    ViewBag.Title = "Product Variants";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var product = ViewBag.Product as OnlineJewelryStore.Models.Product;
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">@Html.ActionLink("Products", "Index", "Products")</li>
            <li class="breadcrumb-item">@Html.ActionLink(product.ProductName, "Details", "Products", new { id = product.ProductID }, null)</li>
            <li class="breadcrumb-item active">Variants</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="bi bi-box-seam"></i> Variants for "@product.ProductName"
                    </h2>
                    <p class="text-muted">Manage SKU, metal types, sizes, and stock</p>
                </div>
                <div>
                    @Html.ActionLink("Add New Variant", "Create", new { productId = product.ProductID }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Back to Product", "Details", "Products", new { id = product.ProductID }, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    </div>

    <!-- Variants Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-list-ul"></i> All Variants
                        @if (Model != null && Model.Any())
                        {
                            <span class="badge bg-primary ms-2">@Model.Count() variants</span>
                        }
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-4">SKU</th>
                                    <th>Metal Type</th>
                                    <th>Purity</th>
                                    <th>Ring Size</th>
                                    <th>Chain Length</th>
                                    <th class="text-end">Additional Price</th>
                                    <th class="text-center">Stock</th>
                                    <th class="text-center">Created</th>
                                    <th class="text-center" style="width: 200px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="ps-4">
                                                <code class="fs-6">@item.SKU</code>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.MetalType))
                                                {
                                                    <span class="badge bg-warning text-dark">@item.MetalType</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Purity))
                                                {
                                                    <span class="badge bg-info text-dark">@item.Purity</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>@(item.RingSize ?? "-")</td>
                                            <td>@(item.ChainLength ?? "-")</td>
                                            <td class="text-end">
                                                <strong>+@item.AdditionalPrice.ToString("N0") VNĐ</strong>
                                            </td>
                                            <td class="text-center">
                                                @if (item.StockQuantity > 10)
                                                {
                                                    <span class="badge bg-success">@item.StockQuantity</span>
                                                }
                                                else if (item.StockQuantity > 0)
                                                {
                                                    <span class="badge bg-warning text-dark">@item.StockQuantity</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Out of Stock</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <small class="text-muted">@item.CreatedAt.ToString("dd/MM/yyyy")</small>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm">
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.VariantID }, new { @class = "btn btn-warning btn-sm" })
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.VariantID }, new { @class = "btn btn-danger btn-sm" })
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9" class="text-center py-5">
                                            <i class="bi bi-inbox fs-1 text-muted"></i>
                                            <p class="mt-3 text-muted">No variants yet. Click "Add New Variant" to create one.</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                @if (Model != null && Model.Any())
                {
                    <div class="card-footer bg-light">
                        <small class="text-muted">
                            <i class="bi bi-info-circle"></i>
                            Total Stock: <strong>@Model.Sum(v => v.StockQuantity)</strong> units
                        </small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>