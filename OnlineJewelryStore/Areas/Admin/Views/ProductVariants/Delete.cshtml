@model OnlineJewelryStore.Models.ProductVariant

@{
    ViewBag.Title = "Delete Variant";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var product = ViewBag.Product as OnlineJewelryStore.Models.Product;
    var hasOrders = Model.OrderItems != null && Model.OrderItems.Any();
    var hasCartItems = Model.CartItems != null && Model.CartItems.Any();
    var hasWishlists = Model.Wishlists != null && Model.Wishlists.Any();
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">@Html.ActionLink("Products", "Index", "Products")</li>
            <li class="breadcrumb-item">@Html.ActionLink(product.ProductName, "Details", "Products", new { id = product.ProductID }, null)</li>
            <li class="breadcrumb-item">@Html.ActionLink("Variants", "Index", new { productId = product.ProductID })</li>
            <li class="breadcrumb-item active">Delete @Model.SKU</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-trash"></i> Delete Variant</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-triangle-fill"></i> Are you sure you want to delete this variant?
                        </h5>
                        <p class="mb-0">This action cannot be undone!</p>
                    </div>

                    <hr />

                    <h5 class="mb-3">Variant Information:</h5>
                    <table class="table table-bordered">
                        <tr>
                            <td class="fw-bold" style="width: 200px;">SKU:</td>
                            <td><code class="fs-6">@Model.SKU</code></td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Product:</td>
                            <td>@product.ProductName</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Metal Type:</td>
                            <td>@(Model.MetalType ?? "-")</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Purity:</td>
                            <td>@(Model.Purity ?? "-")</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Size:</td>
                            <td>@(Model.RingSize ?? Model.ChainLength ?? "-")</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Stock Quantity:</td>
                            <td>
                                @if (Model.StockQuantity > 0)
                                {
                                    <span class="badge bg-success">@Model.StockQuantity units</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Out of Stock</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Additional Price:</td>
                            <td>@Model.AdditionalPrice.ToString("N0") VNĐ</td>
                        </tr>
                    </table>

                    <hr />

                    <h5 class="mb-3">Related Data:</h5>
                    <table class="table table-sm">
                        <tr>
                            <td class="fw-bold">Orders:</td>
                            <td>
                                @if (hasOrders)
                                {
                                    <span class="badge bg-danger">@Model.OrderItems.Count() order(s)</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">No orders</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td class="fw-bold">In Carts:</td>
                            <td>
                                @if (hasCartItems)
                                {
                                    <span class="badge bg-warning text-dark">@Model.CartItems.Count() cart(s)</span>
                                }
                                else
                                {
                                    <span class="text-muted">Not in any cart</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td class="fw-bold">In Wishlists:</td>
                            <td>
                                @if (hasWishlists)
                                {
                                    <span class="badge bg-warning text-dark">@Model.Wishlists.Count() wishlist(s)</span>
                                }
                                else
                                {
                                    <span class="text-muted">Not in any wishlist</span>
                                }
                            </td>
                        </tr>
                    </table>

                    <hr />

                    @if (hasOrders)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-x-circle-fill"></i>
                            <strong>Cannot Delete!</strong> This variant cannot be deleted because it has <strong>@Model.OrderItems.Count()</strong> order(s).
                        </div>

                        <div class="d-flex justify-content-between mt-3">
                            @Html.ActionLink("Back to Variants", "Index", new { productId = product.ProductID }, new { @class = "btn btn-secondary" })
                        </div>
                    }
                    else
                    {
                        using (Html.BeginForm("Delete", "ProductVariants", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="d-flex justify-content-between">
                                @Html.ActionLink("Cancel", "Index", new { productId = product.ProductID }, new { @class = "btn btn-secondary" })
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Yes, Delete This Variant
                                </button>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>