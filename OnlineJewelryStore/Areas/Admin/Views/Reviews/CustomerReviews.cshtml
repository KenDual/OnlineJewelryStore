@model IEnumerable<OnlineJewelryStore.Models.Review>

@{
    ViewBag.Title = "Customer Reviews";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var user = ViewBag.User as OnlineJewelryStore.Models.User;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="bi bi-person-lines-fill text-primary me-2"></i>Customer Reviews
        </h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">@Html.ActionLink("Dashboard", "Index", "Dashboard")</li>
                <li class="breadcrumb-item">@Html.ActionLink("Reviews", "Index")</li>
                <li class="breadcrumb-item active">Customer Reviews</li>
            </ol>
        </nav>
    </div>
    <div>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary me-2">
            <i class="bi bi-arrow-left me-1"></i>Back to Reviews
        </a>
        <a href="@Url.Action("Details", "Users", new { id = user.UserID })" class="btn btn-outline-primary">
            <i class="bi bi-person me-1"></i>View Profile
        </a>
    </div>
</div>

@* Customer Info Card *@
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-auto">
                <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center"
                     style="width: 80px; height: 80px;">
                    <span class="text-primary fw-bold fs-2">
                        @user.FirstName.Substring(0, 1)@user.LastName.Substring(0, 1)
                    </span>
                </div>
            </div>
            <div class="col">
                <h4 class="mb-2">@user.FirstName @user.LastName</h4>
                <div class="mb-2">
                    <span class="badge bg-@(user.Role == "Administrator" ? "danger" : "primary") bg-opacity-10 text-@(user.Role == "Administrator" ? "danger" : "primary")">
                        @user.Role
                    </span>
                </div>
                <div class="text-muted small">
                    <i class="bi bi-envelope me-1"></i>@user.Email |
                    <i class="bi bi-telephone me-1"></i>@user.Phone
                </div>
                <div class="text-muted small">
                    <strong>Registered:</strong> @user.RegistrationDate.ToString("MMM dd, yyyy") |
                    <strong>Last Login:</strong> @(user.LastLogin.HasValue ? user.LastLogin.Value.ToString("MMM dd, yyyy") : "Never")
                </div>
            </div>
        </div>
    </div>
</div>

@* Statistics Cards *@
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center">
                <i class="bi bi-chat-left-text text-primary fs-1 mb-2"></i>
                <h3 class="mb-0">@ViewBag.TotalReviews</h3>
                <p class="text-muted mb-0 small">Total Reviews</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center">
                <i class="bi bi-star-fill text-warning fs-1 mb-2"></i>
                @if (ViewBag.TotalReviews > 0)
                {
                    <h3 class="mb-0">
                        <text>@string.Format("{0:F1}", ViewBag.AverageRating)</text>
                    </h3>
                }
                else
                {
                    <h3 class="mb-0 text-muted">N/A</h3>
                }
                <p class="text-muted mb-0 small">Average Rating Given</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <p class="text-muted mb-2 small text-center">Rating Distribution</p>
                @if (ViewBag.TotalReviews > 0)
                {
                    <div class="d-flex gap-2 justify-content-center flex-wrap">
                        <span class="badge bg-success px-2 py-1">
                            5★ @ViewBag.Rating5Count (<text>@string.Format("{0:F0}%", (ViewBag.Rating5Count / (double)ViewBag.TotalReviews * 100))</text>)
                        </span>
                        <span class="badge bg-info px-2 py-1">
                            4★ @ViewBag.Rating4Count (<text>@string.Format("{0:F0}%", (ViewBag.Rating4Count / (double)ViewBag.TotalReviews * 100))</text>)
                        </span>
                        <span class="badge bg-primary px-2 py-1">
                            3★ @ViewBag.Rating3Count (<text>@string.Format("{0:F0}%", (ViewBag.Rating3Count / (double)ViewBag.TotalReviews * 100))</text>)
                        </span>
                        <span class="badge bg-warning px-2 py-1">
                            2★ @ViewBag.Rating2Count (<text>@string.Format("{0:F0}%", (ViewBag.Rating2Count / (double)ViewBag.TotalReviews * 100))</text>)
                        </span>
                        <span class="badge bg-danger px-2 py-1">
                            1★ @ViewBag.Rating1Count (<text>@string.Format("{0:F0}%", (ViewBag.Rating1Count / (double)ViewBag.TotalReviews * 100))</text>)
                        </span>
                    </div>
                }
                else
                {
                    <p class="text-center text-muted mb-0 small">No reviews yet</p>
                }
            </div>
        </div>
    </div>
</div>

@* Sort Controls *@
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <strong>Sort by:</strong>
            </div>
            <div class="btn-group" role="group">
                <a href="@Url.Action("CustomerReviews", new { id = user.UserID, sortOrder = "" })"
                   class="btn btn-sm @(string.IsNullOrEmpty(ViewBag.CurrentSort as string) ? "btn-primary" : "btn-outline-primary")">
                    <i class="bi bi-clock-history me-1"></i>Newest
                </a>
                <a href="@Url.Action("CustomerReviews", new { id = user.UserID, sortOrder = "date_asc" })"
                   class="btn btn-sm @(ViewBag.CurrentSort == "date_asc" ? "btn-primary" : "btn-outline-primary")">
                    <i class="bi bi-clock me-1"></i>Oldest
                </a>
                <a href="@Url.Action("CustomerReviews", new { id = user.UserID, sortOrder = "rating_desc" })"
                   class="btn btn-sm @(ViewBag.CurrentSort == "rating_desc" ? "btn-primary" : "btn-outline-primary")">
                    <i class="bi bi-star-fill me-1"></i>Highest Rating
                </a>
                <a href="@Url.Action("CustomerReviews", new { id = user.UserID, sortOrder = "rating_asc" })"
                   class="btn btn-sm @(ViewBag.CurrentSort == "rating_asc" ? "btn-primary" : "btn-outline-primary")">
                    <i class="bi bi-star me-1"></i>Lowest Rating
                </a>
                <a href="@Url.Action("CustomerReviews", new { id = user.UserID, sortOrder = "product" })"
                   class="btn btn-sm @(ViewBag.CurrentSort == "product" ? "btn-primary" : "btn-outline-primary")">
                    <i class="bi bi-box-seam me-1"></i>Product Name
                </a>
            </div>
        </div>
    </div>
</div>

@* Reviews List *@
<div class="card border-0 shadow-sm">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="row g-3">
                @foreach (var review in Model)
                {
                    <div class="col-12">
                        <div class="border rounded p-3 hover-shadow">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div class="d-flex align-items-center gap-3">
                                    @if (review.Product.ProductMedias.Any(pm => pm.IsMain))
                                    {
                                        var mainImage = review.Product.ProductMedias.First(pm => pm.IsMain);
                                        <img src="@Url.Content(mainImage.URL)"
                                             alt="@review.Product.ProductName"
                                             class="rounded"
                                             style="width: 60px; height: 60px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                             style="width: 60px; height: 60px;">
                                            <i class="bi bi-image text-muted"></i>
                                        </div>
                                    }
                                    <div>
                                        <div class="fw-medium">@review.Product.ProductName</div>
                                        <small class="text-muted">@review.Product.Category.CategoryName</small>
                                    </div>
                                </div>
                                <div class="text-end">
                                    @{
                                        var ratingClass = review.Rating >= 4 ? "success" :
                                                        review.Rating == 3 ? "warning" : "danger";
                                    }
                                    <div class="badge bg-@ratingClass bg-opacity-10 text-@ratingClass px-2 py-1 mb-1">
                                        @review.Rating <i class="bi bi-star-fill"></i>
                                    </div>
                                    <div class="small text-muted">
                                        @review.CreatedAt.ToString("MMM dd, yyyy")
                                    </div>
                                </div>
                            </div>

                            @if (!string.IsNullOrWhiteSpace(review.Title))
                            {
                                <h6 class="mb-2">@review.Title</h6>
                            }

                            @if (!string.IsNullOrWhiteSpace(review.Body))
                            {
                                <p class="text-muted mb-2 small" style="white-space: pre-wrap;">@review.Body</p>
                            }

                            <div class="d-flex gap-2">
                                <a href="@Url.Action("Details", new { id = review.ReviewID })"
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye me-1"></i>View Details
                                </a>
                                <a href="@Url.Action("ProductReviews", new { id = review.ProductID })"
                                   class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-box-seam me-1"></i>Product Reviews
                                </a>
                                <a href="@Url.Action("Delete", new { id = review.ReviewID })"
                                   class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @* Pagination *@
            if (ViewBag.TotalPages > 1)
            {
                <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                    <div class="text-muted small">
                        Showing @((ViewBag.CurrentPage - 1) * ViewBag.PageSize + 1) to @(Math.Min(ViewBag.CurrentPage * ViewBag.PageSize, ViewBag.TotalItems)) of @ViewBag.TotalItems reviews
                    </div>
                    <nav>
                        <ul class="pagination pagination-sm mb-0">
                            @if (ViewBag.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("CustomerReviews", new {
                                        id = user.UserID,
                                        sortOrder = ViewBag.CurrentSort,
                                        page = ViewBag.CurrentPage - 1
                                    })">Previous</a>
                                </li>
                            }

                            @{
                                var startPage = Math.Max(1, ViewBag.CurrentPage - 2);
                                var endPage = Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2);
                            }

                            @if (startPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("CustomerReviews", new {
                                        id = user.UserID,
                                        sortOrder = ViewBag.CurrentSort,
                                        page = 1
                                    })">1</a>
                                </li>
                                if (startPage > 2)
                                {
                                    <li class="page-item disabled"><span class="page-link">...</span></li>
                                }
                            }

                            @for (int i = startPage; i <= endPage; i++)
                            {
                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("CustomerReviews", new {
                                        id = user.UserID,
                                        sortOrder = ViewBag.CurrentSort,
                                        page = i
                                    })">@i</a>
                                </li>
                            }

                            @if (endPage < ViewBag.TotalPages)
                            {
                                if (endPage < ViewBag.TotalPages - 1)
                                {
                                    <li class="page-item disabled"><span class="page-link">...</span></li>
                                }
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("CustomerReviews", new {
                                        id = user.UserID,
                                        sortOrder = ViewBag.CurrentSort,
                                        page = ViewBag.TotalPages
                                    })">@ViewBag.TotalPages</a>
                                </li>
                            }

                            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("CustomerReviews", new {
                                        id = user.UserID,
                                        sortOrder = ViewBag.CurrentSort,
                                        page = ViewBag.CurrentPage + 1
                                    })">Next</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-chat-left-text text-muted" style="font-size: 4rem;"></i>
                <h5 class="text-muted mt-3">No Reviews Yet</h5>
                <p class="text-muted">This customer hasn't written any reviews.</p>
            </div>
        }
    </div>
</div>

<style>
    .hover-shadow {
        transition: box-shadow 0.2s;
    }

        .hover-shadow:hover {
            box-shadow: 0 0.125rem 0.5rem rgba(0, 0, 0, 0.1);
        }
</style>