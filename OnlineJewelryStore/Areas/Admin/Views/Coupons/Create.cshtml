@model OnlineJewelryStore.Models.Coupon

@{
    ViewBag.Title = "Tạo Mã Giảm Giá";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Dashboard")">
                    <i class="bi bi-house-door"></i> Dashboard
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Coupons")">
                    <i class="bi bi-ticket-perforated"></i> Mã Giảm Giá
                </a>
            </li>
            <li class="breadcrumb-item active">Tạo Mới</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="bi bi-plus-circle text-primary"></i>
                        Tạo Mã Giảm Giá Mới
                    </h2>
                    <p class="text-muted mb-0">Điền thông tin để tạo mã giảm giá cho khách hàng</p>
                </div>
                <div>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Quay Lại
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Main Form -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle text-primary"></i>
                        Thông Tin Mã Giảm Giá
                    </h5>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm("Create", "Coupons", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row g-4">
                            <!-- Coupon Code -->
                            <div class="col-12">
                                <div class="form-floating">
                                    @Html.TextBoxFor(m => m.Code, new
                                    {
                                        @class = "form-control form-control-lg",
                                        placeholder = "Mã Coupon",
                                        required = "required",
                                        maxlength = "32",
                                        style = "text-transform: uppercase; letter-spacing: 2px; font-weight: bold;"
                                    })
                                    <label>
                                        <i class="bi bi-ticket-perforated text-primary"></i>
                                        Mã Coupon <span class="text-danger">*</span>
                                    </label>
                                    @Html.ValidationMessageFor(m => m.Code, "", new { @class = "text-danger small mt-1 d-block" })
                                </div>
                                <small class="text-muted d-block mt-2">
                                    <i class="bi bi-info-circle"></i>
                                    Mã sẽ tự động được viết hoa. Ví dụ: SUMMER2024, NEWYEAR50, VIP20
                                </small>
                            </div>

                            <!-- Percent Off -->
                            <div class="col-12">
                                <div class="form-floating">
                                    @Html.TextBoxFor(m => m.PercentOff, new
                                    {
                                        @class = "form-control form-control-lg",
                                        placeholder = "Phần Trăm Giảm Giá",
                                        required = "required",
                                        type = "number",
                                        step = "0.01",
                                        min = "0.01",
                                        max = "100"
                                    })
                                    <label>
                                        <i class="bi bi-percent text-success"></i>
                                        Phần Trăm Giảm Giá <span class="text-danger">*</span>
                                    </label>
                                    @Html.ValidationMessageFor(m => m.PercentOff, "", new { @class = "text-danger small mt-1 d-block" })
                                </div>
                                <small class="text-muted d-block mt-2">
                                    <i class="bi bi-info-circle"></i>
                                    Nhập giá trị từ 0.01% đến 100%. Ví dụ: 10, 25.5, 50
                                </small>

                                <!-- Preview Discount -->
                                <div class="mt-3 p-3 bg-light rounded" id="discountPreview" style="display: none;">
                                    <div class="row align-items-center">
                                        <div class="col-md-6">
                                            <label class="small text-muted mb-1">Giá Gốc</label>
                                            <input type="text"
                                                   class="form-control"
                                                   id="originalPrice"
                                                   placeholder="1,000,000"
                                                   value="1000000">
                                        </div>
                                        <div class="col-md-6">
                                            <label class="small text-muted mb-1">Giá Sau Giảm</label>
                                            <div class="input-group">
                                                <input type="text"
                                                       class="form-control bg-success text-white fw-bold"
                                                       id="discountedPrice"
                                                       readonly>
                                                <span class="input-group-text">₫</span>
                                            </div>
                                        </div>
                                    </div>
                                    <small class="text-muted d-block mt-2">
                                        <i class="bi bi-calculator"></i>
                                        Tiết kiệm: <span id="savedAmount" class="text-success fw-bold">0₫</span>
                                    </small>
                                </div>
                            </div>

                            <!-- Is Active -->
                            <div class="col-12">
                                <div class="card border-0 bg-light">
                                    <div class="card-body">
                                        <div class="form-check form-switch">
                                            @Html.CheckBoxFor(m => m.IsActive, new
                                            {
                                                @class = "form-check-input",
                                                @checked = "checked",
                                                style = "width: 3rem; height: 1.5rem; cursor: pointer;"
                                            })
                                            <label class="form-check-label ms-2" style="cursor: pointer;">
                                                <strong>Kích Hoạt Ngay</strong>
                                                <p class="text-muted small mb-0 mt-1">
                                                    Mã giảm giá sẽ có thể sử dụng ngay sau khi tạo
                                                </p>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Buttons -->
                            <div class="col-12">
                                <hr>
                                <div class="d-flex justify-content-between">
                                    <a href="@Url.Action("Index")" class="btn btn-lg btn-outline-secondary">
                                        <i class="bi bi-x-circle"></i> Hủy
                                    </a>
                                    <button type="submit" class="btn btn-lg btn-primary">
                                        <i class="bi bi-check-circle"></i> Tạo Mã Giảm Giá
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar - Help & Tips -->
        <div class="col-lg-4">
            <!-- Tips Card -->
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-primary text-white py-3">
                    <h6 class="mb-0">
                        <i class="bi bi-lightbulb"></i>
                        Mẹo Tạo Mã Hiệu Quả
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-flex mb-3">
                        <div class="flex-shrink-0">
                            <i class="bi bi-check-circle-fill text-success fs-5"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <strong>Mã Dễ Nhớ</strong>
                            <p class="text-muted small mb-0">
                                Sử dụng từ ngắn gọn như SUMMER, WINTER, VIP
                            </p>
                        </div>
                    </div>

                    <div class="d-flex mb-3">
                        <div class="flex-shrink-0">
                            <i class="bi bi-check-circle-fill text-success fs-5"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <strong>Có Ý Nghĩa</strong>
                            <p class="text-muted small mb-0">
                                Gắn với sự kiện: NEWYEAR2024, VALENTINE50
                            </p>
                        </div>
                    </div>

                    <div class="d-flex mb-3">
                        <div class="flex-shrink-0">
                            <i class="bi bi-check-circle-fill text-success fs-5"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <strong>Giá Trị Hấp Dẫn</strong>
                            <p class="text-muted small mb-0">
                                10-20% cho khách mới, 30-50% cho VIP
                            </p>
                        </div>
                    </div>

                    <div class="d-flex">
                        <div class="flex-shrink-0">
                            <i class="bi bi-check-circle-fill text-success fs-5"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <strong>Số Đẹp</strong>
                            <p class="text-muted small mb-0">
                                10%, 20%, 50% dễ nhớ hơn 17.5%, 23.3%
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Examples Card -->
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-success text-white py-3">
                    <h6 class="mb-0">
                        <i class="bi bi-card-list"></i>
                        Ví Dụ Mã Phổ Biến
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <span class="badge bg-primary fs-6 mb-2">WELCOME10</span>
                        <p class="text-muted small mb-0">Giảm 10% cho khách hàng mới</p>
                    </div>

                    <hr>

                    <div class="mb-3">
                        <span class="badge bg-danger fs-6 mb-2">FLASH50</span>
                        <p class="text-muted small mb-0">Flash sale giảm 50%</p>
                    </div>

                    <hr>

                    <div class="mb-3">
                        <span class="badge bg-warning text-dark fs-6 mb-2">SUMMER2024</span>
                        <p class="text-muted small mb-0">Mùa hè 2024 - 25% OFF</p>
                    </div>

                    <hr>

                    <div class="mb-0">
                        <span class="badge bg-info fs-6 mb-2">VIP30</span>
                        <p class="text-muted small mb-0">Dành riêng khách VIP - 30%</p>
                    </div>
                </div>
            </div>

            <!-- Warning Card -->
            <div class="card border-warning border-2 shadow-sm">
                <div class="card-body">
                    <h6 class="text-warning">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        Lưu Ý
                    </h6>
                    <ul class="small text-muted mb-0 ps-3">
                        <li>Mã coupon không thể thay đổi sau khi tạo</li>
                        <li>Mã phải là duy nhất trong hệ thống</li>
                        <li>Mã sẽ tự động viết hoa</li>
                        <li>Có thể bật/tắt mã bất kỳ lúc nào</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            // Auto uppercase Code input
            $('#Code').on('input', function () {
                this.value = this.value.toUpperCase().replace(/\s/g, '');
            });

            // Show/hide discount preview
            $('#PercentOff, #originalPrice').on('input', function () {
                var percentOff = parseFloat($('#PercentOff').val()) || 0;
                var originalPrice = parseFloat($('#originalPrice').val().replace(/,/g, '')) || 0;

                if (percentOff > 0) {
                    $('#discountPreview').show();

                    var discount = originalPrice * (percentOff / 100);
                    var finalPrice = originalPrice - discount;

                    $('#discountedPrice').val(finalPrice.toLocaleString('vi-VN'));
                    $('#savedAmount').text(discount.toLocaleString('vi-VN') + '₫');
                } else {
                    $('#discountPreview').hide();
                }
            });

            // Format number input for preview
            $('#originalPrice').on('input', function () {
                var value = this.value.replace(/\D/g, '');
                this.value = value;
            });

            // Trigger initial preview if value exists
            $('#PercentOff').trigger('input');

            // Form validation
            $('form').on('submit', function (e) {
                var code = $('#Code').val().trim();
                var percentOff = parseFloat($('#PercentOff').val());

                if (code === '') {
                    e.preventDefault();
                    alert('Vui lòng nhập mã coupon!');
                    $('#Code').focus();
                    return false;
                }

                if (isNaN(percentOff) || percentOff <= 0 || percentOff > 100) {
                    e.preventDefault();
                    alert('Phần trăm giảm giá phải từ 0.01% đến 100%!');
                    $('#PercentOff').focus();
                    return false;
                }
            });

            // Add animation to switch
            $('.form-check-input').on('change', function () {
                if (this.checked) {
                    $(this).closest('.card').addClass('border-success').removeClass('border-0');
                } else {
                    $(this).closest('.card').removeClass('border-success').addClass('border-0');
                }
            });
        });
    </script>

    <style>
        .form-floating > .form-control:focus ~ label,
        .form-floating > .form-control:not(:placeholder-shown) ~ label {
            color: #0d6efd;
        }

        .form-control:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

        #discountPreview {
            animation: slideDown 0.3s ease;
        }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .card {
            transition: all 0.3s ease;
        }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
    </style>
}