@model IEnumerable<OnlineJewelryStore.Models.Category>

@{
    ViewBag.Title = "Categories Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.ActiveMenu = "Categories";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="bi bi-grid-3x3-gap"></i> Categories Management
                    </h2>
                    <p class="text-muted">Manage product categories and subcategories</p>
                </div>
                <div>
                    @Html.ActionLink("Create New Category", "Create", null, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
    </div>

    <!-- Categories Table Card -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="bi bi-list-ul"></i> All Categories</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-4">Category Name</th>
                                    <th>Parent Category</th>
                                    <th class="text-center">Type</th>
                                    <th class="text-center" style="width: 200px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model.Where(c => c.ParentCategoryID == null).OrderBy(c => c.CategoryName))
                                    {
                                        @* Main Category Row *@
                                        <tr class="table-secondary fw-bold">
                                            <td class="ps-4">
                                                <i class="bi bi-folder-fill text-warning"></i>
                                                <span class="ms-2">@item.CategoryName</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">Main Category</span>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-info text-dark">
                                                    @item.Categories1.Count() sub-categories
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-warning btn-sm" })
                                                    @Html.ActionLink("Details", "Details", new { id = item.CategoryID }, new { @class = "btn btn-info btn-sm" })
                                                    @if (item.Categories1.Count() == 0 && item.Products.Count() == 0)
                                                    {
                                                        @Html.ActionLink("Delete", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-danger btn-sm" })
                                                    }
                                                    else
                                                    {
                                                        <button class="btn btn-danger btn-sm" disabled title="Cannot delete category with sub-categories or products">
                                                            Delete
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>

                                        @* Sub-categories Rows *@
                                        foreach (var subItem in item.Categories1.OrderBy(c => c.CategoryName))
                                        {
                                            <tr>
                                                <td class="ps-5">
                                                    <i class="bi bi-folder text-secondary"></i>
                                                    <span class="ms-2">@subItem.CategoryName</span>
                                                </td>
                                                <td>
                                                    <span class="text-muted">@subItem.Category1.CategoryName</span>
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge bg-success">
                                                        @subItem.Products.Count() products
                                                    </span>
                                                </td>
                                                <td class="text-center">
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        @Html.ActionLink("Edit", "Edit", new { id = subItem.CategoryID }, new { @class = "btn btn-warning btn-sm" })
                                                        @Html.ActionLink("Details", "Details", new { id = subItem.CategoryID }, new { @class = "btn btn-info btn-sm" })
                                                        @if (subItem.Products.Count() == 0)
                                                        {
                                                            @Html.ActionLink("Delete", "Delete", new { id = subItem.CategoryID }, new { @class = "btn btn-danger btn-sm" })
                                                        }
                                                        else
                                                        {
                                                            <button class="btn btn-danger btn-sm" disabled title="Cannot delete category with products">
                                                                Delete
                                                            </button>
                                                        }
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center py-5">
                                            <i class="bi bi-inbox fs-1 text-muted"></i>
                                            <p class="mt-3 text-muted">No categories found. Click "Create New Category" to add one.</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                @if (Model != null && Model.Any())
                {
                    <div class="card-footer bg-light text-muted py-2">
                        <small>
                            <i class="bi bi-info-circle"></i>
                            Total: <strong>@Model.Count(c => c.ParentCategoryID == null)</strong> main categories,
                            <strong>@Model.Count(c => c.ParentCategoryID != null)</strong> sub-categories
                        </small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    /* Custom styling for better UX */
    .table > tbody > tr {
        transition: all 0.2s ease;
    }

        .table > tbody > tr:hover {
            background-color: rgba(0, 123, 255, 0.05);
        }

    .table-secondary {
        background-color: #f8f9fa !important;
    }

    .btn-group-sm .btn {
        padding: 0.25rem 0.5rem;
        font-size: 0.8rem;
    }

    .badge {
        font-weight: 500;
        padding: 0.35em 0.65em;
    }

    .card {
        border: none;
        border-radius: 0.5rem;
    }

    .card-header {
        border-bottom: 1px solid #dee2e6;
    }

    .ps-5 {
        padding-left: 3rem !important;
    }
</style>