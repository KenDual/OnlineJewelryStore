@model IEnumerable<OnlineJewelryStore.Models.ProductMedia>

@{
    ViewBag.Title = "Product Media";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var product = ViewBag.Product as OnlineJewelryStore.Models.Product;
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">@Html.ActionLink("Products", "Index", "Products")</li>
            <li class="breadcrumb-item">@Html.ActionLink(product.ProductName, "Details", "Products", new { id = product.ProductID }, null)</li>
            <li class="breadcrumb-item active">Media</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="bi bi-images"></i> Media for "@product.ProductName"
                    </h2>
                    <p class="text-muted">Manage product images, videos, and 360° views</p>
                </div>
                <div>
                    @Html.ActionLink("Upload Media", "Upload", new { productId = product.ProductID }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Back to Product", "Details", "Products", new { id = product.ProductID }, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    </div>

    <!-- Media Grid -->
    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var media in Model.OrderByDescending(m => m.IsMain))
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <!-- Media Preview -->
                        <div class="position-relative">
                            @if (media.MediaType == "Image")
                            {
                                <img src="@media.URL" class="card-img-top" alt="Product Image" style="height: 250px; object-fit: cover;" />
                            }
                            else if (media.MediaType == "Video")
                            {
                                <div class="card-img-top bg-dark text-white d-flex align-items-center justify-content-center" style="height: 250px;">
                                    <div class="text-center">
                                        <i class="bi bi-play-circle fs-1"></i>
                                        <p class="mt-2 mb-0">Video</p>
                                    </div>
                                </div>
                            }
                            else if (media.MediaType == "360View")
                            {
                                <div class="card-img-top bg-info text-white d-flex align-items-center justify-content-center" style="height: 250px;">
                                    <div class="text-center">
                                        <i class="bi bi-arrow-repeat fs-1"></i>
                                        <p class="mt-2 mb-0">360° View</p>
                                    </div>
                                </div>
                            }

                            <!-- Main Badge -->
                            @if (media.IsMain)
                            {
                                <span class="position-absolute top-0 start-0 m-2 badge bg-primary">
                                    <i class="bi bi-star-fill"></i> Main
                                </span>
                            }
                        </div>

                        <!-- Card Body -->
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge bg-secondary">@media.MediaType</span>
                                <small class="text-muted">ID: @media.MediaID</small>
                            </div>

                            <!-- Actions -->
                            <div class="d-grid gap-2">
                                @if (!media.IsMain)
                                {
                                    using (Html.BeginForm("SetMain", "ProductMedias", FormMethod.Post, new { style = "display:inline;" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@media.MediaID" />
                                        <button type="submit" class="btn btn-sm btn-outline-primary w-100">
                                            <i class="bi bi-star"></i> Set as Main
                                        </button>
                                    }
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-primary w-100" disabled>
                                        <i class="bi bi-star-fill"></i> Main Image
                                    </button>
                                }

                                @Html.ActionLink("Delete", "Delete", new { id = media.MediaID }, new { @class = "btn btn-sm btn-danger w-100" })
                            </div>
                        </div>

                        <!-- Card Footer -->
                        <div class="card-footer bg-light text-muted">
                            <small>
                                <i class="bi bi-link-45deg"></i>
                                <a href="@media.URL" target="_blank" class="text-decoration-none">View Full Size</a>
                            </small>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle fs-1"></i>
                    <h4 class="mt-3">No media uploaded yet</h4>
                    <p>Upload images, videos, or 360° views to showcase this product.</p>
                    @Html.ActionLink("Upload Now", "Upload", new { productId = product.ProductID }, new { @class = "btn btn-success" })
                </div>
            </div>
        }
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><i class="bi bi-info-circle"></i> Media Statistics</h5>
                        <div class="row text-center">
                            <div class="col-md-3">
                                <h3 class="text-primary">@Model.Count()</h3>
                                <p class="text-muted">Total Media</p>
                            </div>
                            <div class="col-md-3">
                                <h3 class="text-success">@Model.Count(m => m.MediaType == "Image")</h3>
                                <p class="text-muted">Images</p>
                            </div>
                            <div class="col-md-3">
                                <h3 class="text-info">@Model.Count(m => m.MediaType == "Video")</h3>
                                <p class="text-muted">Videos</p>
                            </div>
                            <div class="col-md-3">
                                <h3 class="text-warning">@Model.Count(m => m.MediaType == "360View")</h3>
                                <p class="text-muted">360° Views</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .card {
        transition: transform 0.2s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.1) !important;
        }
</style>