@model OnlineJewelryStore.Models.ProductMedia

@{
    ViewBag.Title = "Delete Media";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var product = ViewBag.Product as OnlineJewelryStore.Models.Product;
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">@Html.ActionLink("Products", "Index", "Products")</li>
            <li class="breadcrumb-item">@Html.ActionLink(product.ProductName, "Details", "Products", new { id = product.ProductID }, null)</li>
            <li class="breadcrumb-item">@Html.ActionLink("Media", "Index", new { productId = product.ProductID })</li>
            <li class="breadcrumb-item active">Delete</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-trash"></i> Delete Media</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-triangle-fill"></i> Are you sure you want to delete this media?
                        </h5>
                        <p class="mb-0">This action cannot be undone! The file will be permanently deleted.</p>
                    </div>

                    <hr />

                    <h5 class="mb-3">Media Preview:</h5>

                    <div class="text-center mb-4">
                        @if (Model.MediaType == "Image")
                        {
                            <img src="@Model.URL" alt="Media" class="img-fluid rounded shadow" style="max-height: 400px;" />
                        }
                        else if (Model.MediaType == "Video")
                        {
                            <div class="bg-dark text-white rounded p-5">
                                <i class="bi bi-play-circle" style="font-size: 5rem;"></i>
                                <p class="mt-3">Video File</p>
                            </div>
                        }
                        else if (Model.MediaType == "360View")
                        {
                            <div class="bg-info text-white rounded p-5">
                                <i class="bi bi-arrow-repeat" style="font-size: 5rem;"></i>
                                <p class="mt-3">360° View</p>
                            </div>
                        }
                    </div>

                    <h5 class="mb-3">Media Information:</h5>
                    <table class="table table-bordered">
                        <tr>
                            <td class="fw-bold" style="width: 200px;">Media ID:</td>
                            <td>@Model.MediaID</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Product:</td>
                            <td>@product.ProductName</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Media Type:</td>
                            <td><span class="badge bg-secondary">@Model.MediaType</span></td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Main Image:</td>
                            <td>
                                @if (Model.IsMain)
                                {
                                    <span class="badge bg-primary"><i class="bi bi-star-fill"></i> Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td class="fw-bold">File URL:</td>
                            <td>
                                <small class="text-muted">@Model.URL</small><br />
                                <a href="@Model.URL" target="_blank" class="btn btn-sm btn-outline-primary mt-1">
                                    <i class="bi bi-box-arrow-up-right"></i> View Full Size
                                </a>
                            </td>
                        </tr>
                    </table>

                    @if (Model.IsMain)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>Warning:</strong> This is the main product image. After deletion, another image will be automatically set as the main image if available.
                        </div>
                    }

                    <hr />

                    @using (Html.BeginForm("Delete", "ProductMedias", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="d-flex justify-content-between">
                            @Html.ActionLink("Cancel", "Index", new { productId = product.ProductID }, new { @class = "btn btn-secondary" })
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Yes, Delete This Media
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>